{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "include": [
      "**/*.json",
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.ts",
      "**/*.tsx"
    ],
    "ignore": ["lib/", "lib-commonjs/", ".vscode/"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["generated/", "lib-commonjs/", ".vscode/"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "ignore": ["generated/", "lib-commonjs/", ".vscode/"],
    "rules": {
      "recommended": false,
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "security": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    },
    "jsxRuntime": "reactClassic"
  }
}
