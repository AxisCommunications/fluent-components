  },
  "bin": {
    "changelog": "generated/changelog/cli.js",
    "commitlint": "generated/commitlint/cli.js",
    "release": "generated/release/cli.js"
  },
  "dependencies": {
    "cmd-ts": "0.13.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/semver": "^7.5.2"
  }
}
